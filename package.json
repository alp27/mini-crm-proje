{
  "name": "mini-crm",
  "version": "0.1.0",
  "description": "MiniCRM - Yarım kalmış müşteri ve sipariş yönetim sistemi (senaryo için).",
  "main": "src/server.js",
 "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "cross-env NODE_ENV=test jest --runInBand --testTimeout=10000",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage --runInBand",
    "db:create": "sequelize-cli db:create",
    "db:migrate": "sequelize-cli db:migrate",
    "db:undo": "sequelize-cli db:migrate:undo",
    "setup": "npm run db:create && npm run db:migrate"
  },
  "dependencies": {
    "csv-parser": "^3.2.0",
    "dotenv": "^16.6.1",
    "express": "^4.19.0",
    "pg": "^8.11.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.7.4",
    "sequelize-cli": "^6.6.3",
    "supertest": "^6.3.4"
  }
}
