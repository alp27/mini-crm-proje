{
  "name": "mini-crm",
  "version": "0.1.0",
  "description": "MiniCRM - Yarım kalmış müşteri ve sipariş yönetim sistemi (senaryo için).",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --runInBand",
    "db:create": "sequelize-cli db:create",
    "db:migrate": "sequelize-cli db:migrate",
    "db:undo": "sequelize-cli db:migrate:undo",
    "setup": "npm run db:create && npm run db:migrate"
  },
  "dependencies": {
    "csv-parser": "^3.2.0",
    "dotenv": "^16.4.0",
    "express": "^4.19.0",
    "pg": "^8.11.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "sequelize-cli": "^6.6.3",
    "supertest": "^6.3.4"
  }
}
